server {

    listen        80;
    server_name   www.rhokthehood.com;
    return 301 $scheme://rhokthehood.com$request_uri;

}

server {

    listen         80;
    server_name    rhokthehood.com;
    rewrite ^(.*) https://$host$1 permanent;

}

server {

    listen         443 ssl;
    server_name    rhokthehood.com;

    ssl_certificate        /etc/nginx/ssl/com.rhokthehood.www.crt;
    ssl_certificate_key    /etc/nginx/ssl/com.rhokthehood.www.key;

    location / {

        proxy_pass         http://static.citruspi;
        proxy_set_header   Host                         $host;
        proxy_set_header   X-Real-IP                    $remote_addr;
        proxy_set_header   X-Forwarded-For              $proxy_add_x_forwarded_for;
    
    }

}
